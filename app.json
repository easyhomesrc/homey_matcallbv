{
  "id": "com.matcallbv.matcall",
  "version": "1.0.4",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#373A3D",
  "name": {
    "en": "MATCALL"
  },
  "description": {
    "en": "Adds support for Matcall bv devices."
  },
  "category": [
    "lights"
  ],
  "tags": {
    "en": [
      "matcall",
      "matcall bv",
      "matcallbv"
    ]
  },
  "permissions": [
    "homey:wireless:zigbee"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Wang Wendong",
    "email": "sunricher_src@163.com"
  },
  "bugs": {
    "url": "https://github.com/easyhomesrc/homey_matcallbv/issues"
  },
  "source": "https://github.com/easyhomesrc/homey_matcallbv.git",
  "support": "https://github.com/easyhomesrc/homey_matcallbv.git",
  "flow": {
    "actions": [
      {
        "id": "level_step_with_onoff",
        "title": {
          "en": "Step level (with On/Off)"
        },
        "duration": false,
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZG_401224"
          },
          {
            "name": "mode",
            "type": "number",
            "min": 0,
            "max": 1,
            "step": 1,
            "title": {
              "en": "Mode, { 0 } means up, { 1 } means down, other values are invalid."
            }
          },
          {
            "name": "step_size",
            "type": "range",
            "min": 0,
            "max": 1,
            "step": 0.01,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0,
            "title": {
              "en": "Step size"
            }
          },
          {
            "name": "transition_time",
            "type": "number",
            "min": 0,
            "max": 6553,
            "step": 1,
            "title": {
              "en": "Transition time, range { 0 ~ 6553 } seconds."
            }
          }
        ]
      },
      {
        "id": "level_move_with_onoff",
        "title": {
          "en": "Move level (with On/Off)"
        },
        "duration": false,
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZG_401224"
          },
          {
            "name": "move_mode",
            "type": "number",
            "min": 0,
            "max": 1,
            "step": 1,
            "title": {
              "en": "Move mode, { 0 } means up, { 1 } means down, other values are invalid."
            }
          },
          {
            "name": "rate",
            "title": "Rate",
            "type": "range",
            "min": 0,
            "max": 1,
            "step": 0.01,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          }
        ]
      },
      {
        "id": "level_stop_with_onoff",
        "title": {
          "en": "Stop level (with On/Off)"
        },
        "duration": false,
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZG_401224"
          }
        ]
      },
      {
        "id": "recall_scene",
        "title": {
          "en": "Recall scene"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZG_401224"
          },
          {
            "name": "group_id",
            "type": "number",
            "title": {
              "en": "Group ID, default { 0 }"
            }
          },
          {
            "name": "scene_id",
            "type": "number",
            "title": {
              "en": "Scene ID"
            }
          }
        ]
      },
      {
        "id": "store_scene",
        "title": {
          "en": "Store scene"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=ZG_401224"
          },
          {
            "name": "group_id",
            "type": "number",
            "title": {
              "en": "Group ID, default { 0 }"
            }
          },
          {
            "name": "scene_id",
            "type": "number",
            "title": {
              "en": "Scene ID"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "ZG_401224",
      "name": {
        "en": "ZG DIM Light"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim"
      ],
      "capabilitiesOptions": {
        "dim": {
          "opts": {
            "duration": true
          }
        },
        "onoff": {
          "setOnDim": false
        }
      },
      "zigbee": {
        "manufacturerName": "Matcall bv",
        "productId": [
          "ZG9101CS",
          "ZG 401224"
        ],
        "endpoints": {
          "1": {
            "clusters": [
              0,
              3,
              4,
              5,
              6,
              8,
              2821,
              4096
            ],
            "bindings": [
              6,
              8
            ]
          }
        },
        "learnmode": {
          "image": "/drivers/ZG_401224/assets/learnmode.svg",
          "instruction": {
            "en": "Press the reset button 5 times (within 1.5 seconds) on the device, it will reset the device and active the pair mode."
          }
        }
      },
      "images": {
        "large": "/drivers/ZG_401224/assets/images/large.png",
        "small": "/drivers/ZG_401224/assets/images/small.png"
      },
      "settings": []
    }
  ]
}